#phorum .avatar_list .gravatar_ref,
#phorum .avatar_list table td {
  vertical-align: middle;
  padding: 10px 20px 10px 10px;
}

#phorum .avatar_list .avatar_list_item {
  margin-bottom: 5px;
  background: #ffffff;
  border: 1px solid #e0e0e0;
}

#phorum .avatar_list .avatar_list_item.active {
  background: #e6ffe6;
  border: 1px solid #c6dfc6;
}

#phorum .avatar_list img {
  cursor: hand;
  cursor: pointer;
  border: 1px solid #888;
}

#phorum #avatar_upload_form table {
  width: 100%;
}

#phorum #avatar_upload_form table td {
  vertical-align : middle;
  white-space: nowrap;
  padding: 0 1em 1em 0;
}

#phorum #avatar_upload_form input.url{
  width: 100%;
}

#phorum .gravatar_ref {
  font-size: 80%;
}

#phorum .gravatar_ref img {
  margin-bottom: 2px;
}

#phorum .avatar_editor img {
  border: none;
}

#phorum .avatar_editor .jcrop-holder {
  margin-right: 10px;
}
